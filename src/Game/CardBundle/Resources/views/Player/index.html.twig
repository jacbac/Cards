{% extends "GameCardBundle::layout.html.twig" %}

{% block title %}
    Les joueurs - {{ parent() }}
{% endblock %}

{% block game_body %}

    <div class="page-header">
        <h1>Les joueurs</h1>
    </div>
    {{ render(controller("GameCardBundle:Player:menu")) }}
    <hr />
    <p>Les historiques, les statitisques, les points, etc.</p>

    <p>
    {% for p in player  %}
        {{  p.firstname }}<br />
        {{  p.lastname }}<br />
        {{  p.birth|date("d-m-Y") }}<br />
    {% endfor %}
    </p>

{% endblock %}